server {
  listen 80;

  server_name bookstore-test.local;

  location / {
    proxy_pass http://frontend:3000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

  location /api {
    proxy_pass http://api:8080;
    rewrite ^/api/(.*) /$1 break;
  }
}