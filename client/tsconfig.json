{
  "compilerOptions": {
    "target": "es3",
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "dom",
      "es2015.promise",
      "es2020",
      "esnext"
    ],
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ]
}
